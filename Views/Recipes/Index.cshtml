@{
    ViewData["Title"] = "Recipes";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            @Html.Partial("SearchBar")
        </div>
    </div>
    <div class="row">
        <div class="col-2">
            <div class="shadow rounded position-sticky" id="recipe-list">
                <div class="border-bottom border-3 p-2">
                    <h4 class="text-pink text-center fst-italic ">Recipes</h4>
                    @Html.Partial("SideMenu")
                </div>
            </div>
        </div>
        <div class="col-10">
            <div class="mb-2">
                <h4 class="text-dark">Pizza</h4>
                <div class="row" id="pizzaRecipe"></div>
            </div>
            <div class="mb-2">
                <h4 class="text-dark">Curry</h4>
                <div class="row" id="curryRecipe"></div>
            </div>
            <div class="mb-2">
                <h4 class="text-dark">Burger</h4>
                <div class="row" id="burgerRecipe"></div>
            </div>
            <div class="mb-2">
                <h4 class="text-dark">Risotto</h4>
                <div class="row" id="risottoRecipe"></div>
            </div>
        </div>
    </div>
</div>


<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        GetRecipes("pizza", "pizzaRecipe", false);
        GetRecipes("curry", "curryRecipe", false);
        GetRecipes("burger", "burgerRecipe", false);
        GetRecipes("risotto", "risottoRecipe", false);
    })
</script>